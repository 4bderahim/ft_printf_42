
colorize() {
    local color="$1"
    local text="$2"
    local NC='\033[0;34m' # No Color
    echo -e "${color}${text}${NC}"
}
NC='\033[1;33m'
RED='\033[0;31m'
echo "\n\n"

echo "${NC}#--------------------------------[UPDATE]-------------------------------#${NC}"
git add *
git status 
git commit -m "update"
git push
echo -e "$(colorize '\033[1;31m' "$(git push)")"
