
colorize() {
    local color="$1"
    local text="$2"
    local NC='\033[0;34m' # No Color
    echo -e "${color}${text}${NC}"
}
NC='\033[1;33m'
RED='\033[0;31m'
echo "\n\n"


echo "$(NC)     ▄▀█ █▀▀ █░░ ▄▄ █▄▀ █▀█ █ █▀▄  $(NC)"
echo "$(NC)     █▀█ ██▄ █▄▄ ░░ █░█ █▀▄ █ █▄▀  $(NC)"
git add *
git status 
git commit -am "update"

git push | colorize '\033[1;32m'
